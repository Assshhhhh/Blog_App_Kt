<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E4E4E"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circ_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"

        android:scaleType="centerCrop"
        android:src="@drawable/profile1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/circ_profile_image"
        app:layout_constraintStart_toStartOf="@+id/circ_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/circ_profile_image" />

    <View
        android:id="@+id/divider3"
        android:layout_width="234dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#C8C8C8"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile_name"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile_add_new_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_add_article"
        android:drawablePadding="28dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Add New Article"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/divider3"
        app:layout_constraintStart_toStartOf="@+id/divider3"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile_your_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_articles"
        android:drawablePadding="28dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Your Articles"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/button_profile_add_new_article"
        app:layout_constraintStart_toStartOf="@+id/button_profile_add_new_article"
        app:layout_constraintTop_toBottomOf="@+id/button_profile_add_new_article" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="28dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Logout"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/button_profile_your_article"
        app:layout_constraintStart_toStartOf="@+id/button_profile_your_article"
        app:layout_constraintTop_toBottomOf="@+id/button_profile_your_article" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Deigned by\nJamal Ali"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>